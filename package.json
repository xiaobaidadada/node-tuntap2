  "license": "MIT",
  "dependencies": {
    "bindings": "^1.5.0",
    "prebuild-install": "^7.1.2"
  },
  "files": [
    "binding.gyp",
    "common.gypi",
    "src/**"
  ],
  "devDependencies": {
    "mocha": "^10.7.3",
    "node-addon-api": "^7.1.1",
    "node-gyp": "^10.2.0",
    "prebuild": "^13.0.1"
  }
